<html>

<head>
    <!-- Basic -->
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <!-- Mobile Metas -->
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <!-- Site Metas -->
    <meta name="keywords" content="" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <link rel="shortcut icon" href="images/favicon.png" type="">

    <title> Feane </title>

    <!-- bootstrap core css -->
    <link rel="stylesheet" type="text/css" href="css/bootstrap.css" />

    <!--owl slider stylesheet -->
    <link rel="stylesheet" type="text/css"
        href="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/assets/owl.carousel.min.css" />
    <!-- nice select  -->
    <link rel="stylesheet"
        href="https://cdnjs.cloudflare.com/ajax/libs/jquery-nice-select/1.1.0/css/nice-select.min.css"
        integrity="sha512-CruCP+TD3yXzlvvijET8wV5WxxEh5H8P4cmz0RFbKK6FlZ2sYl3AEsKlLPHbniXKSrDdFewhbmBK5skbdsASbQ=="
        crossorigin="anonymous" />
    <!-- font awesome style -->
    <link href="css/font-awesome.min.css" rel="stylesheet" />

    <!-- Custom styles for this template -->
    <link href="css/style.css" rel="stylesheet" />
    <!-- responsive style -->
    <link href="css/responsive.css" rel="stylesheet" />
    <style>
        .maxi {
            background-image: url("img/fondo_tabla.jpg");

            background-repeat: repeat;
            background-size: 100%;
            /* Añadido para mantener el tamaño normal de la imagen */
        }

        .letra_1 {
            color: aliceblue;
        }

        .verde {
            color: chartreuse;
        }
    </style>

</head>

<body class="maxi">

    <div class="hero_area">

        <!-- header section strats -->
        <header class="header_section">
            <div class="container">
                <nav class="navbar navbar-expand-lg custom_nav-container">
                    <a class="navbar-brand" href="home">
                        <img src="img/logo.png" alt="" width="100" height="100" />
                    </a>
                    <% if (user) { %>
                        <a class="navbar-brand" href="/perfil">
                            <h1>
                                <%= user.usuario %>
                            </h1>
                            <span class="sr-only">(current)</span>
                        </a>
                        <% } %>

                            <button class="navbar-toggler" type="button" data-toggle="collapse"
                                data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                                aria-expanded="false" aria-label="Toggle navigation">
                                <span class=""> </span>
                            </button>

                            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                                <ul class="navbar-nav mx-auto">
                                    <li class="nav-item active">
                                        <a class="nav-link" href="/home">Home <span class="sr-only">(current)</span></a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" href="/menu">GALERIA</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" href="/about">Nosotros Somos...</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" href="/todo">Carta</a>
                                    </li>
                                    <% if (user){ %>
                                        <li class="nav-item">
                                            <a class="nav-link" href="/mesa_orden">Ordenar</a>
                                        </li>
                                        <li class="nav-item">
                                            <a class="nav-link" href="/perfil">Perfil</a>
                                        </li>

                                        <% } %>
                                </ul>
                                <div class="user_option">
                                    <% if (user) { %>

                                        <a href="/cerrar_sesion" class="order_online"> Logout </a>
                                        <% } else { %>
                                            <a href="/login" class="order_online"> Login </a>
                                            <a href="/registrar_usuario" class="order_online">
                                                Registrarme
                                            </a>
                                            <% } %>
                                </div>
                            </div>
                </nav>
            </div>
        </header>

        <!-- end header section -->

        


        <div class="container borde_tabla ">
            <div class=" mt-5 mb-5">
                
                <h1 class="letra_1"><%= titulo %></h1>
                <table class="table  table-striped">
                    <thead>
                        <tr>
                            <th>Nº de Mesas</th>
                            <th>Capacidad</th>
                            <th>Disponible</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% for (const row of mesas[0]) { %>
                            <tr>
                                <td>
                                    <%= row.numero_mesa %>
                                </td>
                                <td>
                                    <%= row.capacidad %>
                                </td>
                                <td class="verde">
                                    <%= row.disponible %>
                                </td>
                            </tr>
                            <% } %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <%- include('partials/footer.ejs'); -%>
</body>
</html>